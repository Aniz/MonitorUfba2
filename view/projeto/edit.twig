{% extends "layout.twig" %}

{% block title %}Editar dados{% endblock %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}
{% block content %}
    <h4>Editando Projetos</h4>

 {% for entity in entities %}

     <div>         
        <form Method ="POST" enctype="multipart/form-data" Action ="?acao=update">
         
      <fieldset>
    <div class="container-fluid">
    <div class="row-fluid"> 
      <font color = 'white'>Nova Monitoria</font>
        <font color = 'white'> Sign up</font>      
          <div class="span9">
            <label>Resumo:</label> 
                <textarea type='text' name='resumo' placeholder="resumo"
                value='{{resumo}}' style="margin: 0px 0px 10px; width: 724px; height: 115px;"></textarea>
            </div>
        <div class="span9">
            <label>Atividades:</label>
                <textarea id="atividades" type='text' name='atividades' placeholder="a serem desenvolvidas"
                value='' style="margin: 0px 0px 10px; width: 724px; height: 115px;"></textarea>
        </div>
    </div>
     <div class="row-fluid"> 
        <div class="span3">
            <label>Professor:</label> 
            <select name="professor">
                {% for prof in professores %}
                <option value="{{prof.id_professor}}">{{prof.nome}}</option>
                {% endfor %}
            </select>
        </div>
        <div class="span3">
            <label>Vagas pedidas: </label>
                 <input type='text' name='vagasPedidas' placeholder="vagas solicitadas"
                  value='{{vagasPedidas}}' >
        </div>
        <div class="span3">
            <label>Vagas aprovadas: </label>
                 <input type='text' name='vagasAprovadas' placeholder="vagas aprovadas"
                  value='{{vagasAprovadas}}' >
        </div>
    </div>  
    <div class="row-fluid"> 
        <div class="span3">
            <label>Carga horaria total: </label>
                 <input type='text' name='chTotal' placeholder="carga horaria total" value='{{chTotal}}' >
        </div>
        <div class="span3">
            <label>Carga horaria semanal: </label>
                 <input type='text' name='chSemanal' placeholder="carga horaria semanal"
                  value='{{chSemanal}}' >
        </div>
        <div class="span1">
            <input name="bolsa" type="checkbox">Bolsa?
            <input name="aprovado" type="checkbox">Aprovado?
        </div>
    </div>
    <div class="row-fluid"> 
        <div class="span3">
            <label>Periodo de inscricao inicio: </label>
                 <input type='text' name='periodoInscricaoInicio' placeholder="Periodo Inscricao Inicio"
                  value='{{periodoInscricaoInicio}}' >
        </div>
        <div class="span3">
            <label>Periodo de inscricao final: </label>
                 <input type='text' name='periodoInscricaoFinal' placeholder="Periodo Inscricao Final"
                  value='{{periodoInscricaoFinal}}' >
        </div>
        <div class="span3">
            <label>Periodo selecao: </label>
                 <input type='text' name='periodoSelecao' placeholder="Periodo Selecao"
                  value='{{periodoSelecao}}' >
           </div>
           </div>
    
          <p><input type='submit' class="btn" value="Atualizar" name="enviar">
              <input type="button" class="btn" value="Adicionar Edital" onClick="document.location='../controller/edital.php?acao=newProjeto&idProjeto={{entity.id_projeto}}'">
              <input type="button" class="btn" value="Cancelar" onClick="document.location='../View/index.php'"> </p>
    </div>   
 <div class="container-fluid">
         <input type="button" class="btn" value="Criar Seleção" onClick="document.location='../controller/selecao.php?acao=newSelecao&idProjeto={{entity.id_projeto}}'">

         <input type="button" class="btn" value="Criar monitoria" onClick="document.location='../controller/monitoria.php?acao=newMonitoria&idProjeto={{entity.id_projeto}}'">
        
         <input type="button" class="btn" value="Adicionar relatorio" onClick="document.location='../controller/selecao.php?acao=newRealatorio&idProjeto={{entity.id_projeto}}'">

   </div>

       </fieldset>
       </form>
       </div>    
{% endfor %}


{% endblock %}