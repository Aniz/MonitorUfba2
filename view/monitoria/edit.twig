{% extends "layout.twig" %}

{% block title %}Editar dados{% endblock %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}
{% block content %}
    <h4>Editando Monitoria</h4>

 {% for entity in entities %}

     <div>         
        <form Method ="POST" enctype="multipart/form-data" Action ="?acao=update">
         
    <fieldset> 
   <div class="container-fluid">
    <div class="row-fluid"> 
      <font color = 'white'>Nova Monitoria</font>
          <div class="span3">
            <label>Data de inicio:</label> 
                <input type='date' name='dataInicio' placeholder="dataInicio"
                value='{{entity.data_inicio}}' >
          </div>
          <div class="span3">
            <label>Data de Fim:</label> 
                <input type='date' name='dataFim' placeholder="data de fim"
                value='{{entity.data_fim}}' >
          </div>
          <div class="span3">
            <label>Semestre:</label>
                <input id="semestre" type='text' name='semestre' placeholder="semestre"
                value='{{entity.semestre}}' >
          </div>
      </div>
      
      <div class="row-fluid"> 
           <div class="span3">
            <label>Professor:</label> 
            <select name="idProfessor">
                {% for prof in professores %}
                <option value="{{prof.id_professor}}">{{prof.nome}}</option>
                {% endfor %}
            </select>
          </div>
           <div class="span3"> 
            <label>Professor orientador:</label>
             <select name="idProfessorOrientador">
              {% for prof in professores %}
                {% if entity.id_professor == prof.id_professor %}
                  <option value="{{prof.id_professor}}" checked>{{prof.nome}}</option>
                {% else %}
                  <option value="{{prof.id_professor}}">{{prof.nome}}</option>
                {% endif %}
              {% endfor %}
            </select>
          </div>
           <div class="span3"> 
            <label>Aluno:</label> 
            <select name="idAluno">
                {% for alu in alunos %}
                {% if entity.id_aluno == prof.id_aluno %}
                  <option value="{{alu.id_aluno}}" checked>{{alu.nome}}</option>
                {% else %}
                  <option value="{{alu.id_aluno}}">{{alu.nome}}</option>
                {% endif %}
                {% endfor %}
            </select>
          </div>
        </div>

      <div class="row-fluid"> 
        <div class="span3">
             <label>Unidade: </label>
                 <input type='text' name='unidade' placeholder="unidade"
                  value='{{entity.unidade}}' >
        </div>
         <div class="span3"> 
            <label>Orgão: </label>
                 <input type='text' name='orgao' placeholder="orgão"
                  value='{{entity.orgao}}' >
          </div>
               <div class="span1">

        {% if entity.bolsa is empty %}
          <input name="bolsa" type="checkbox">Bolsa?<br>
        {% else %}
         <input name="bolsa" type="checkbox" checked>Bolsa?<br>
         {% endif %}

        {% if entity.bolsa is empty %}
          <input name="status" type="checkbox">Fechar?<br>
        {% else %}
          <input name="status" type="checkbox" checked>Fechar?<br>
        {% endif %}

        </div>  
         <div class="span9"> 
            <label>Componentes curriculares: </label>
                 <textarea id="content" style="margin: 0px 0px 10px; width: 724px; height: 115px;" type='text' name='componentesCurriculres' placeholder="componentes curriculres" value='{{componentesCurriculres}}' ></textarea>
        </div>
        </div>
      </div>
          <p><input type='submit' class="btn" value="Register" name="enviar">
                 <input type="button" class="btn" value="Return" onClick="document.location='../View/index.php'"> </p>
       </fieldset>
      </form>
       </div>    
{% endfor %}


{% endblock %}