{% extends "layout.twig" %}

{% block title %}Editar dados{% endblock %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}
{% block content %}
    <h4>Editando aluno</h4>

 {% for entity in entities %}

     <div>         
        <form Method ="POST" enctype="multipart/form-data" Action ="?acao=update">
         
  <fieldset>
    <div class="container-fluid">
        <div class="row-fluid"> 
            <font color = 'white'> Sign up</font>
            
            <label>Nome: {{entity.nome}}
            Genero: {{entity.genero}}
             CPF: {{entity.cpf}}
             RG: {{entity.rg}}
             Orgão emissor: {{entity.orgao_emissor}}
             Matricula: {{entity.matricula}}</label>
           
            <div class="span3">
                <label>Email:</label>
                    <input type='text' name='email' placeholder="@email.com"
                    value='{{entity.email}}'>
            </div>
            <div class="span9">
                <label>Endereco: </label>
                     <input style="width: 710px;" type='text' name='endereco' placeholder="endereço" value='{{entity.endereco}}' >
            </div>
            <div class="span3">
                <label>Telefone: </label>
                     <input type='text' name='telefone' placeholder="(71) XXXX-XXXX)"
                      value='{{entity.telefone}}' >
            </div>
            <div class="span3">
                <label>Ano de Ingresso: </label>
                     <input type='text' name='anoIngresso' placeholder="ex: 2000.1"
                      value='{{entity.ano_ingresso}}' >
            </div>
            <div class="span6">
                <label>Curso: </label>
                     <input style="width: 460px;" type='text' name='curso' placeholder="curso"
                      value='{{entity.curso}}' >
            </div>
            <div class="span3"> 
                <label>Historico: </label>
                     <input type="file" name="historico" value='{{historico}}'><br>
            </div>
        </div>
    </div>
    
    <h4>Dados de conta:<h4>
        <div class="container-fluid">
             <div class="row-fluid">
                <div class="span3"> 
                    <label>Banco: </label>
                         <input type='text' name='banco' placeholder="banco"
                          value='{{banco}}' >
                </div>
                <div class="span3"> 
                    <label>Agencia: </label>
                         <input type='text' name='agencia' placeholder="ex: 11111-1"
                          value='{{agencia}}' >
                </div>
                <div class="span3"> 
                    <label>Conta Corrente: </label>
                         <input type='text' name='cc' placeholder="ex: 2000.1"
                          value='{{cc}}' >
                </div>
            </div>

                <input type='hidden' name='id' value='{{entity.id_aluno}}'>
            <p><input type='submit' class="btn" value="Edit" name="enviar">
                 <input name="limpar" class="btn" type="reset" id="limpar" value="Clean">
                 <input type="button" class="btn" value="Return" onClick="document.location='../../index.php'"> </p>
       </fieldset>
       </form>
       </div>    
{% endfor %}


{% endblock %}