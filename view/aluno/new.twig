{% extends "layout.twig" %}

{% block title %}Index{% endblock %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
    <script src="../helper/Mascaras.js" type="text/javascript"></script>
{% endblock %}
{% block content %}
    <h4>Cadastro de Aluno</h4>

     <div>         
        <form Method ="POST" enctype="multipart/form-data" Action ="?acao=create">
         
        <fieldset>
            <font color = 'white'> Sign up</font>
            <label>Nome:</label> 
                <input type='text' name='nome' placeholder="nome"
                value='{{nome}}' >
            <label>Genero:</label> 
            <select name="genero"> 
              <option value="M" >Masculino</option>
              <option value="F" >Feminino</option>              
            </select>
            <label>CPF:</label>
                <input id="CPF" type='text' name='cpf' placeholder="ex: 111.111.111-11"
                value='' >
            <label>Email:</label>
                <input type='text' name='email' placeholder="@email.com"
                value='' >
            <label>RG:</label> 
                 <input  type='text' name='rg' placeholder="ex: 11111111-11" 
                 value='{{rg}}' >
            <label>Orgão emissor: </label>
                 <input type='text' name='orgaoEmissor' placeholder="ex: SSPBA"
                  value='{{orgaoEmissor}}' >
            <label>Senha: </label>
                <input type='password' name='senha' placeholder="Senha"
                value='' > 
            <label>Endereco: </label>
                 <input type='text' name='endereco' placeholder="endereço" value='{{endereco}}' >
            <label>Telefone: </label>
                 <input type='text' name='telefone' placeholder="(71) XXXX-XXXX)"
                  value='{{telefone}}' >
            <label>Tipo: </label>
                 <input type='text' name='tipo' placeholder="tipo"
                  value='{{tipo}}' >
            <label>Matricula: </label>
                 <input type='text' name='matricula' placeholder="ex: 111111111"
                  value='{{matricula}}' >
            <label>Curso: </label>
                 <input type='text' name='curso' placeholder="curso"
                  value='{{curso}}' >
            <label>Ano de Ingresso: </label>
                 <input type='text' name='anoIngresso' placeholder="ex: 2000.1"
                  value='{{anoIngresso}}' >
            <br>
            Dados de conta:
            <label>Banco: </label>
                 <input type='text' name='banco' placeholder="banco"
                  value='{{banco}}' >
            <label>Agencia: </label>
                 <input type='text' name='agencia' placeholder="ex: 11111-1"
                  value='{{agencia}}' >
            <label>Contacorrente: </label>
                 <input type='text' name='cc' placeholder="ex: 2000.1"
                  value='{{cc}}' >
            <label>Historico: </label>
                 <input type="file" name="historico" value='{{historico}}'><br>
                  
           

            <p><input type='submit' class="btn" value="Register" name="enviar">
                 <input name="limpar" class="btn" type="reset" id="limpar" value="Clean">
                 <input type="button" class="btn" value="Return" onClick="document.location='../View/index.php'"> </p>
       </fieldset>
       </form>
       </div>    

{% endblock %}