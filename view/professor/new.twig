{% extends "layout.twig" %}

{% block title %}Professor{% endblock %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
    <script src="../helper/Mascaras.js" type="text/javascript"></script>
{% endblock %}
{% block content %}
<h4>Cadastro de Professor</h4>   
<div>         
    <form Method ="POST" enctype="multipart/form-data" Action ="?acao=create"> <fieldset>
    <div class="container-fluid">
        <div class="row-fluid"> 
            <font color = 'white'> Sign up</font>
                <div class="span9">    
                    <label>Nome:</label> 
                        <input style="width: 710px;" type='text' name='nome' placeholder="nome"
                        value='{{nome}}' >
                </div>
                <div class="span3">    
                    <label>CPF:</label>
                        <input id="CPF" type='text' name='cpf' placeholder="ex: 111.111.111-11"
                        value='' >
                </div>
                <div class="span3">    
                    <label>Email:</label>
                        <input type='text' name='email' placeholder="@email.com" value='' >
                </div>
                <div class="span3">    
                    <label>RG:</label> 
                         <input  type='text' name='rg' placeholder="ex: 11111111-11" value='{{rg}}' >
                </div>
                <div class="span3">    
                    <label>Orgão emissor: </label>
                         <input type='text' name='orgaoEmissor' placeholder="ex: SSPBA"
                          value='{{orgaoEmissor}}' >
                </div>
                <div class="span3">    
                <label>Senha: </label>
                    <input type='password' name='senha' placeholder="Senha"
                    value='' > 
                </div>
                <div class="span3">    
                    <label>Telefone: </label>
                         <input type='text' name='telefone' placeholder="(71) XXXX-XXXX)"
                          value='{{telefone}}' >  
                </div>
                <div class="span9">    
                <label>Endereco: </label>
                     <input style="width: 710px;" type='text' name='endereco' placeholder="endereço" value='{{endereco}}' >
                </div>
                <div class="span3">          
                    <label>Matricula: </label>
                         <input type='text' name='matricula' placeholder="ex: 111111111"
                          value='{{matricula}}' >
                </div>
                <div class="span3">    
                <label>Departamento: </label>
                   <select name="departamento">
                    {% for depart in departamentos %}
                    <option value="{{depart.id_departamento}}">{{depart.nome}}</option>
                    {% endfor %}
                </select>
            </div>
       </div>     
            <p><input type='submit' class="btn" value="Register" name="enviar">
                 <input name="limpar" class="btn" type="reset" id="limpar" value="Clean">
                 <input type="button" class="btn" value="Return" onClick="document.location='../View/index.php'"> </p>
       </div>
       </fieldset>
       </form>
       </div>    

{% endblock %}